{
  "name": "@asleepace/try",
  "version": "0.1.4",
  "description": "TypeScript utilities for error handling.",
  "keywords": [
    "try",
    "catch",
    "helper",
    "error",
    "handling",
    "utility",
    "asleepace",
    "isomorphic",
    "ergonomic"
  ],
  "author": "Colin Teahan",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run tsc && bun build ./src/index.ts --outdir ./dist --target node",
    "npm:publish:dry": "bun run npm publish --dry-run --access=public",
    "npm:publish": "bun run npm publish --access=public",
    "npm:patch": "bun run npm version patch",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
